{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cl.exe - build luaSimple",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "luaSimple.exe",
                "luaSimple.c",
                // core
                "lapi.c",
                "lcode.c",
                "lctype.c",
                "ldebug.c",
                "ldo.c",
                "ldump.c",
                "lfunc.c",
                "lgc.c",
                "llex.c",
                "lmem.c",
                "lobject.c",
                "lopcodes.c",
                "lparser.c",
                "lstate.c",
                "lstring.c",
                "ltable.c",
                "ltm.c",
                "lundump.c",
                "lvm.c",
                "lzio.c",
                "ltests.c",
                // lauxlib
                "lauxlib.c",
                // lib
                "lbaselib.c",
                "ldblib.c",
                "liolib.c",
                "lmathlib.c",
                "loslib.c",
                "ltablib.c",
                "lstrlib.c",
                "lutf8lib.c",
                "loadlib.c",
                "lcorolib.c",
                "linit.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
        }
    ],
            
}